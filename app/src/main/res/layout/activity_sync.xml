<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#AAB7B8"
    tools:context="com.acuizen.root.devaapp.SyncActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:textSize="60px"
        android:layout_marginLeft="20px"
        android:textColor="#FFFFFF"
        android:text="Welcome xxxx,"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:layout_marginLeft="20px"
        android:textColor="#FFFFFF"
        android:text="Last Synced"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:id="@+id/sync_text"
        android:textSize="50px"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:text="Syncing data from server"/>

    <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_loading_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/view_task"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tasks"
        android:drawableRight="@drawable/ic_chevron_right_white_24dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginTop="40px"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/sync_again"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync Again"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
</LinearLayout>
