<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.acuizen.root.devaapp.ProjectDetailActivity"
    tools:showIn="@layout/app_bar_project_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/pro_engg"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Engineer"
            android:layout_gravity="center"
            android:layout_marginTop="50px"
            android:drawableRight="@drawable/ic_chevron_right_white_24dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/mat_ctrl"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Material Controller"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:drawableRight="@drawable/ic_chevron_right_white_24dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/qty_ctrl"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quality Controller"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:drawableRight="@drawable/ic_chevron_right_white_24dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
